    <script>
     function toggleTask(element) {
        // Zavře všechny ostatní
        document.querySelectorAll(".task-card").forEach(card => {
            if (card !== element) {
                card.classList.remove("active");
            }
        });

        // Přepne aktivní třídu pro kliknutý úkol
        element.classList.toggle("active");
    }
